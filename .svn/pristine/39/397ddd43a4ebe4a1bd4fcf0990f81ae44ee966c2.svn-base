/*请示审批文件样式*/
.list-file{list-style:none;padding:2px;margin:0;}
.list-file>li{list-style:none;float:left;position:relative;padding:2px 5px;margin:2px 5px;}
.list-file>li>a.del{display:none;position: absolute;right:-10px;top:-5px;width:16px;height:16px;font-size:12px;}
.list-file>li:hover{cursor:default;}
.list-file>li:hover>a.del{display:block;cursor:pointer;color: red;}
