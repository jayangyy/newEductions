/*文本框*/
input[type='text'] {
	height: 20px;
	border: 1px solid #DCDCDC;
	font-size: 13px;
	padding-top: 3px;
	padding-left: 5px;
}
/*文本框-鼠标滑过、得到焦点*/
input[type='text']:hover,input[type='text']:focus {  /*鼠标指针在其上浮动的input[type='text']*/
	border: 1px solid #FBC986;
}
/*下拉框*/
select {
	height: 26px;
	border: 1px solid #DCDCDC;
}
/*单选按钮组*/
input[type='radio'] + label {
	cursor: pointer;
	margin-right: 10px;
}




/*整个表格border:1px solid #009193;*/
.tab {
	height: auto;
	box-sizing: border-box;
	border-top: 1px solid #009193;
	border-right: 1px solid #009193;
}
.tab th, .tab td {
	box-sizing:border-box;
	text-align: center;
	padding:5px;
	border-collapse: collapse;
	border-left: 1px solid #009193;
	border-bottom: 1px solid #009193;
}
.tab th {
	color: #0532FF;
	font-size: 16px;
}
.tab td {
	color: #141414;
	font-size: 14px;
}
.tab td > div > input[type='text'] {
	box-sizing:border-box;
	width: 100%;
	height:22px;
}
/*表头*/
.tab-title {
	font-size: 30px;
	font-weight: bold;
	text-align: center;
	color: #009193;
	line-height: 50px;
}
/*子表头*/
.sub-tab-title {
	font-size: 16px;
	font-weight: bold;
	text-align: center;
	color: #4B4B4B;
	line-height: 20px;
	margin-bottom:10px;
}
/*开发资源列表表格样式*/
.tab2 {
	width: 100%;
	height: auto;
	border-collapse: collapse;
	box-sizing: border-box;
}
.tab2 th, .tab2 td {
	border: 1px solid #c0c0c0;
	width: auto;
	text-align: center;
	padding: 5px;
}
.tab2 th {
	color: #000000;
	font-size: 16px;
}
.tab2 td {
	color: #141414;
	font-size: 14px;
}
.tab2 th.seq{width:50px;}
.tab2 th.sj{width:180px;}/*时间*/
