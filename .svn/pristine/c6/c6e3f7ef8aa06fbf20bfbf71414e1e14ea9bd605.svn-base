        <script type="text/javascript">
            $(function () {
                $('#tt').tabs({
                    onLoad: function (panel) {
                        var plugin = panel.panel('options').title;
                        panel.find('textarea[name="code-' + plugin + '"]').each(function () {
                            var data = $(this).val();
                            data = data.replace(/(\r\n|\r|\n)/g, '\n');
                            if (data.indexOf('\t') == 0) {
                                data = data.replace(/^\t/, '');
                                data = data.replace(/\n\t/g, '\n');
                            }
                            data = data.replace(/\t/g, '    ');
                            var pre = $('<pre name="code" class="prettyprint linenums"></pre>').insertAfter(this);
                            pre.text(data);
                            $(this).remove();
                        });
                        prettyPrint();
                    }
                });
                var sw = $(window).width();
                if (sw < 767) {
                    $('body').layout('collapse', 'west');
                }
                $('.navigation-toggle span').bind('click', function () {
                    $('#head-menu').toggle();
                });
            });
            function open1(obj) {
                debugger;
                var plugin = $(obj).attr("data-res-name");
                var href = $(obj).attr("data-res-url");
                if ($('#tt').tabs('exists', plugin)) {
                    $('#tt').tabs('select', plugin);
                } else {
                    $('#tt').tabs('add', {
                        title: plugin,
                        content: '<iframe src="' + href + '" style="width:100%;height:100%;border:0px;overflow:hidden"></iframe>',
                        closable: true,
                        bodyCls: 'content-doc'
                    });
                }
            }
        </script>
